<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (200/255, 10/255, 24/255)

<CalculatorWidget>

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: result_box
            text: '0'
            font_size: '80'
            font_name: "/Users/f22daniel/PycharmProjects/Griraffe/Kivy_Projects/The_Lab/1_The_layout/fonts/Lcd.ttf"
            size_hint: (1, 0.2)
            halign: 'right'
            color: (1, 0, 0, 1)
            background_color: (1, 1, 1, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


        TextInput:
            id: input_box
            text: '0'
            
            font_size: '70'
            font_name: "/Users/f22daniel/PycharmProjects/Griraffe/Kivy_Projects/The_Lab/1_The_layout/fonts/Lcd.ttf"
            halign: 'right'
            valign: 'down'
            size_hint: (1, 0.2)
            background_color: (20/255, 20/255, 30/255, 1)
            foreground_color: (1, 1, 0, 1)
        GridLayout:
            cols:5
            rows:5
            spacing: ('2.5dp', '2.5dp')
            # Row 1
            Button:
                text: '%'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs('%')
            Button:
                text: 'C'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.clear()
            Button:
                text: '<<'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.remove_last()
            Button:
                text: '/'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs('/')
            Button:
                text: '('
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.button_value('(')
            # Row 2
            Button:
                text: '7'
                font_size: '32dp'
                on_press: root.button_value(7)
            Button:
                text: '8'
                font_size: '32dp'
                on_press: root.button_value(8)
            Button:
                text: '9'
                font_size: '32dp'
                on_press: root.button_value(9)
            Button:
                text: 'X'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs('*')
            Button:
                text: ')'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.button_value(')')
            # Row 3
            Button:
                text: '4'
                font_size: '32dp'
                on_press: root.button_value(4)
            Button:
                text: '5'
                font_size: '32dp'
                on_press: root.button_value(5)
            Button:
                text: '6'
                font_size: '32dp'
                on_press: root.button_value(6)
            Button:
                text: '-'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs('-')
            Button:
                text: 'Power'
                font_size: '32'
                background_color: (14/255, 73/255, 176/255, 1)
            # Row 4
            Button:
                text: '1'
                font_size: '32dp'
                on_press: root.button_value(1)
            Button:
                text: '2'
                font_size: '32dp'
                on_press: root.button_value(2)
            Button:
                text: '3'
                font_size: '32dp'
                on_press: root.button_value(3)
            Button:
                text: '+'
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs('+')
            Button:
                text: 'Root'
                font_size: '32'
                background_color: (14/255, 73/255, 176/255, 1)
            # Row 5
            Button:
                text: '+/-'
                font_size: '32dp'
                on_press: root.invert()
            Button:
                text: '0'
                font_size: '32dp'
                on_press: root.button_value(0)
            Button:
                text: '.'
                font_size: '32dp'
                on_press: root.button_value('.')
            Button:
                text: '='
                font_size: '32dp'
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.print_result()